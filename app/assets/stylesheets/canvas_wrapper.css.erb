.ci-main-canvas {position:relative;max-width:100%;margin:0 auto;}
.ci-main-canvas .ci-canvas-wrapper {margin:0px 30px 15px 0px;position:relative;overflow:hidden;border:1px solid #000;box-shadow:0px 0px 10px rgba(0,0,0,.8);
    background: url(<%= asset_path 'pantalla_2/canvas_background.png' %>) no-repeat center center;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
	min-width: 360px;
    height: 360px;
}
.ci-main-canvas .ci-canvas-wrapper:hover {cursor:move;}

.ci-main-canvas .ci-canvas-wrapper canvas {position:absolute;z-index:1;top:45px;left:0px;min-width:360px;}
