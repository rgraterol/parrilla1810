.formulario {
    position: absolute;
    width: 360px;
    left: 20%;
    border: 1px solid;
    z-index: 999;
    margin-top: -5%;
}

.formulario {
    background: url(<%= asset_path 'lightpaperfibers.png' %>);
    border-image:url(<%= asset_path "frame.png" %>) 30 repeat;
    -o-border-image:url(<%= asset_path "frame.png" %>) 30 repeat;
    -moz-border-image:url(<%= asset_path "frame.png" %>) 30 repeat;
    -webkit-border-image:url(<%= asset_path "frame.png" %>) 30 repeat;

    border-width: 10px;

    font-family: BlissPro;
    font-size: 14px !important;
    color: #3C4449;
}

.title_formulario {
    font-family: AbrahamLincoln;
    font-size: 30px;
    margin-bottom: 5px;
    color: #902a1f;
    margin-top: 15px;
}

.form-control {
    font-family: BlissPro;
    font-size: 12px !important;
}


.fb_reset {
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif !important;

}