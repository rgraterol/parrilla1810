.vcenter {
    min-height: 100%;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.luces {
    position: fixed;
    background: url(<%= asset_path 'pantalla_1/luces.png' %>) no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    height: 100vh;
    z-index: -1;
    width: 100%;
}

.row_up {
    margin-top: 15%;
}

.portrait {
    position: absolute;
    height: 358px;
    width: 359px;
    overflow-y: hidden;
    overflow-x: hidden;
    left:20%;
}


.arte {
    background: url( <%= asset_path 'pinturas/01-loco.png' %>)  no-repeat scroll 0 0 transparent;
    pointer-events: none;
    position: absolute;
    width: 360px;
    height: 360px;
    z-index: 50;
}

.pic_frame {
    position: absolute;
    width: 360px;
    z-index: 1;
    height: 360px;
}

.modal-header {
    min-height: 16.43px;
    padding: 5px;
    border-bottom: 1px solid #e5e5e5;
}
.modal-content {
    background-color: rgba(28, 31, 32, 0.68) !important;
}

.thumb {
    margin-bottom: 30px;
}

.thumbnail {
    background-color: rgba(218, 218, 218, 0.24) !important;
    border: 5px solid rgba(255, 255, 255, 0.44);
}

a.thumbnail:focus, a.thumbnail:hover {
    border-color: rgba(141, 26, 26, 0.58);
}

.row_costillas {
    position: fixed;
    bottom: 5%;
    left: 20%;
}

.fb_reset {
    margin-bottom: 2%;
}

.imagen_costillas {
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top: 0%;
    width: 700px;
}

*:focus {
    outline: 0;
    outline: none;
}

.video {
    -moz-transform: scaleX(-1);
    -o-transform: scaleX(-1);
    -webkit-transform: scaleX(-1);
    transform: scaleX(-1);
    filter: FlipH;
    -ms-filter: "FlipH";
}

.canvas {
    -moz-transform: scaleX(-1);
    -o-transform: scaleX(-1);
    -webkit-transform: scaleX(-1);
    transform: scaleX(-1);
    filter: FlipH;
    -ms-filter: "FlipH";
}

#buttons {
    width: 50%;
    margin-left: 25%;
    text-align: center;
}




#porta {
    position: absolute;
    width: 50%;
    left: 25%;
    z-index: 10;
    text-align: center;
    pointer-events: none;
}
#container {
    position: relative;
}


