:javascript
  jQuery(document).ready(function($) {

    var flag = true;
    $('#modal_parrilleros').on('show.bs.modal', function () {
      if (flag) {
        jQuery('#camera_wrap').camera({
          height: '500px',
          loader: 'bar',
          pagination: false,
          thumbnails: true,
          alignment: 'center',
          playPause: false,
          autoAdvance: false,
          fx: 'simpleFade',
          portrait: false
        });
         $(this).find('.modal-body').css({
                width:'auto',
                height:'635px',
                'max-height':'100%'
         });
         flag = false;
      }

    });
  });


