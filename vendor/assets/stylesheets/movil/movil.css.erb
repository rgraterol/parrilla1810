@media screen and (max-width: 768px) and (orientation: portrait) {
    .vector_smart {
        width: 700px;
    }


    .vector_smart_row .img-responsive {
        display: inline;
        max-width: none;

    }

    .frase_inicial {
        display:none !important;
    }

    .m_video_promocional {
        display: inline !important;
        margin-bottom: 15px;
    }

    .m_video_img {
        width: 190px;
    }

    .m_texto_home {
        display: inline !important;
    }

    #boton_facebook_row {
        margin-top: 15px;
    }

    #adorno_btn_fb_row {
        display: none !important;
    }
    .m_row_bottom {
        position: absolute;
        bottom: 0;
        height: 10vh;
        display: block !important;
        margin-left: auto;
        margin-top: auto;
        width: 100%;
        background-color: #fff;
        border-top: 10px solid rgba(107, 105, 105, 0.65);;
    }
    .m_productos_parrilleros {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-top: 4%;
    }

    /*********************** PANTALLA 2 **********************/
    .luces {
        display: inline !important;
    }
    .portrait {
        position: fixed;
        left: 50%;
        top: 25%;
        margin-left: -180px;
    }

    .row_nombre_usuario {
        position: fixed;
        top: 15%;
        left: 50%;
        margin-left: -135px;
        border-bottom: 2px solid #9e9d9d;
    }

    .nombre_usuario {
        display: inline;
        color: #0E388F;
    }
    .apellido_usuario {
        display: inline;
        margin-left: 10px;
        color: #0E388F;
    }
    .adorno_izquierdo {
        display: none !important;
    }

    .adorno_derecho {
        display: none !important;
    }
    .row_texto {
        display: none !important;
    }
    .row_continuar {
        position: fixed;
        top: 80%;
        left: 50%;
        margin-left: -60px;
    }

    .cambiar_personaje_img {
        display: none;
    }
    .cambiar_marco_img {
        display: none;
    }
    .cambiar_marco_m {
        display: block !important;
        position: fixed;
        top: 25%;
        left: 79%;
    }

    .cambiar_arte_m {
        display: block !important;
        position: fixed;
        top: 25%;
        left: 8%;
    }

    .m_texto_artemarco {
        display: inline !important;
        position: fixed;
        top: 65%;
        width: 400px;
        left: 50%;
        margin-left: -200px;
    }


    .navigation {
        display: none !important;
    }

}

@media screen and (max-width: 600px) and (orientation: portrait) {

    .row_nombre_usuario {
        top: 12%;
    }
    .portrait {
        top: 20%;
    }

    .cambiar_marco_m {
        top: 20%;
        left: 82%;
    }

    .cambiar_arte_m {
        left: 5%;
        top: 20%;
    }



}

@media screen and (max-width: 500px) and (orientation: portrait) {
    .vector_smart {
        width: 450px;
    }

    .m_video_img {
        width: 120px;
    }

    .m_texto_home {
        width: 300px;
    }

    .btn_facebook_connect {
        width: 120px;
    }
    .m_row_bottom {
        height: 12vh;
        border-top: 5px solid rgba(107, 105, 105, 0.65);
    }

    .m_productos_parrilleros {
        margin-top: 4vh;
        width: 250px;
    }
    .row_nombre_usuario {
        margin-left: -100px;
    }

    .nombre_usuario {
        font-size: 30px;
    }

    .apellido_usuario {
        font-size: 30px;
        margin-left: 5px;
    }

    .video,
    .canvas,
    .pic_frame,
    .arte,
    .formulario,
    .ci-main-canvas .ci-canvas-wrapper,
    .pintura00,
    .pintura01,
    .pintura02,
    .pintura03,
    .pintura04,
    .pintura05,
    .pintura06,
    .frame00,
    .frame01,
    .frame02,
    .frame03,
    .frame04,
    .frame05
    {
        width: 200px !important;
        height: 200px !important;
        background-size: 100%;
        min-width: 200px !important;
    }

    .portrait {
        width: 200px;
        height: 200px;
        left: 50%;
        margin-left: -100px;
    }

    .cambiar_arte_m {
        width: 50px;
        left: 3%;
    }
    .cambiar_marco_m {
        left: 84%;
        width: 50px;
    }
    .row_continuar {
        margin-left: -40px;
    }

    .boton_continuar_r {
        width: 80px;
    }

    .m_texto_artemarco {
        top: 62%;
    }

    #camara_on {
        display: none !important;
    }
    #snap {
        display: none !important;
    }
    .row_subir_imagen {
        position: fixed;
        left: 82%;
        top: 20%;
    }

    .subir_imagen {
        display: none !important;
    }
    .subir_imagen_m {
        display: block !important;
        width: 50px;
    }
}