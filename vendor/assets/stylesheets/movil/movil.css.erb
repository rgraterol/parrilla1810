@media screen and (max-width: 768px) and (orientation: portrait) {
    html, body {
        overflow: hidden;
    }
    body {
        position: relative
    }
    html.touch body {
        overflow:hidden;
    }

    .m_row_bottom {
        display: none !important;
    }
    .vector_smart {
        width: 700px;
    }

    .aux_relative {
        display: none;
    }
    .vector_smart_row .img-responsive {
        display: inline;
        max-width: none;

    }

    .frase_inicial {
        display:none !important;
    }

    .m_video_promocional {
        display: inline !important;
        margin-bottom: 15px;
    }

    .m_video_img {
        width: 190px;
    }

    .m_texto_home {
        display: inline !important;
    }

    #boton_facebook_row {
        margin-top: 15px;
    }

    #adorno_btn_fb_row {
        display: none !important;
    }
    .m_row_bottom {
        position: fixed;
        bottom: 0;
        height: 10vh;
        display: block !important;
        margin-left: auto;
        margin-top: auto;
        width: 100%;
        background-color: #fff;
        border-top: 10px solid rgba(107, 105, 105, 0.65);;
    }
    .m_productos_parrilleros {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-top: 4%;
    }

    /*********************** PANTALLA 2 **********************/
    .luces {
        display: inline !important;
    }
    .portrait {
        position: fixed;
        left: 50%;
        top: 25%;
        margin-left: -180px;
    }

    .row_nombre_usuario {
        position: fixed;
        top: 15%;
        left: 50%;
        margin-left: -135px;
        border-bottom: 2px solid #9e9d9d;
    }

    .nombre_usuario {
        display: inline;
        color: #0E388F;
    }
    .apellido_usuario {
        display: inline;
        margin-left: 10px;
        color: #0E388F;
    }
    .adorno_izquierdo {
        display: none !important;
    }

    .adorno_derecho {
        display: none !important;
    }
    .row_texto {
        display: none !important;
    }
    .row_continuar {
        position: fixed;
        top: 80%;
        left: 50%;
        margin-left: -60px;
    }

    .cambiar_personaje_img {
        display: none;
    }
    .cambiar_marco_img {
        display: none;
    }
    .cambiar_marco_m {
        display: block !important;
        position: fixed;
        top: 25%;
        left: 79%;
    }

    .cambiar_arte_m {
        display: block !important;
        position: fixed;
        top: 25%;
        left: 8%;
    }

    .m_texto_artemarco {
        display: inline !important;
        position: fixed;
        top: 65%;
        width: 400px;
        left: 50%;
        margin-left: -200px;
    }
    .row_encender_camara {
        pointer-events: none;
    }


    .navigation {
        display: none !important;
    }

    #camara_on {
        display: none !important;
    }
    #snap {
        display: none !important;
    }
    .subir_imagen {
        display: none !important;
    }

    .row_subir_imagen {
        position: fixed;
        top: 27%;
        left: 80%;
    }

    .m_texto_foto {
        position: fixed;
        top: 65%;
        width: 400px;
        left: 50%;
        margin-left: -200px;
    }

    .subir_imagen_m {
        display: block !important;
    }
    .ci-main .ci-tool {
        left: 20%;
        top: 25%;
        z-index: 999;
    }

    .row_compartir {
        position: fixed;
        top: 80%;
        left: 50%;
        margin-left: -250px;
    }

    .boton_compartir_r {
        width: 500px;
    }

    .formulario {
        position: fixed;
        top: 25%;
        left: 50%;
        margin-left: -180px;
        height: 400px;
    }
    .m_adorno_form {
        display: block !important;
        position: fixed;
        top: 76%;
        left: 50%;
        margin-left: -150px;
    }

    #status {
        display: none;
    }
    #preloader {
        display: none;
    }

    .zoom-range {
        position: fixed;
        top: 58%;
        left: 50%;
        margin-left: -200px;
        width: 400px !important;
    }

}

@media screen and (max-width: 600px) and (orientation: portrait) {

    .row_nombre_usuario {
        top: 12%;
    }
    .portrait {
        top: 20%;
    }

    .cambiar_marco_m {
        top: 20%;
        left: 82%;
    }

    .cambiar_arte_m {
        left: 5%;
        top: 20%;
    }

    .row_subir_imagen {
        position: fixed;
        top: 25%;
        left: 82%;
    }

    .ci-main .ci-tool {
        left: 15%;
        top: 20%;
    }



}

