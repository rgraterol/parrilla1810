    }
    .boton_enviar_img {
        width: 150px;
    }
    .m_adorno_form {
        width: 200px;
        margin-left: -100px;
    }
    #focal {
        position: absolute;
        z-index: 1;
        width: 200px;
        height: 200px;
    }

    .img_container {
        width: 200px !important;
        height: 200px !important;
    }

    .zoom-range {
        top: 60%;
        margin-left: -100px;
        width: 200px !important;
    }
    #loading_facebook_share {
        position: fixed;
        left: 50%;
        margin-left: -0.5em;
    }
